@{
  Layout = "_Layout";
}

@using DrSillystringz.Models;
@model List<DrSillystringz.Models.Machine>;

<h1>Machines Currently In Operation:</h1><hr />

@if (@Model.Count == 0)
{
  <h3>No Machines are currently in service.</h3>
}

<ul style="list-style-type: none;">
  @foreach (Machine machine in Model)
  {
    <li>Machine Name: @Html.ActionLink($"{machine.MachineName}", "Details", new { id = machine.MachineId })
        <br>
        Machine Id: @Html.DisplayFor(model => machine.MachineId)
    </li>
    <hr />
  }
</ul>

<br>

<p><strong>Go To..</strong></p>
<p>@Html.ActionLink("Add machine to factor floor", "Create")</p>
<p>@Html.ActionLink("View all Engineers", "Index", "Engineers")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>