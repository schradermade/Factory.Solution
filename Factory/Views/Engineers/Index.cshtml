@{
  Layout = "_Layout";
}

@using DrSillystringz.Models;
@model List<DrSillystringz.Models.Engineer>;

  <h1>Engineers</h1>

<br>
<hr />

  @if (@Model.Count == 0)
  {
    <h3>No Engineers have been added to the factory floor.</h3>
  }

  @foreach (Engineer engineer in Model)
  {
    <li>@Html.ActionLink($"{engineer.EngineerName}", "Details", new { id = engineer.EngineerId })</li>
  }

<br>
<hr />
<p><strong>Go To..</strong></p>
  <p>@Html.ActionLink("Add a new Engineer", "Create")</p>
  <p>@Html.ActionLink("Home", "Index", "Home")</p>